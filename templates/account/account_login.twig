{% extends "/layouts/main.twig" %}

{% block page %}

<div class="login-container">
    <div class="login-card">
        <div class="login-logo">
            <img src="/images/homehq_logo.svg" alt="HomeHQ" class="logo-image" style="height: 64px; width: auto;">
        </div>
        
        <h1 class="login-title">Sign in</h1>
        <p class="login-subtitle">Welcome back! Please sign in to continue.</p>
        
        <button class="oauth-button google-oauth" onclick="window.location.href='/auth/google'">
            <svg class="oauth-icon" viewBox="0 0 24 24" width="20" height="20">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Google</span>
        </button>
        
        <div class="divider">
            <span>or</span>
        </div>
        
        <form method="post" name="account_login" action="/account/login" class="login-form">
            <input type="hidden" name="account_login" value="true">
            
            <div class="form-field">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="{{form.email}}" placeholder="colyn@example.com" class="form-input" required>
                {% if errors.email == true %}
                <div class="error-message">{{ errors.email_text }}</div>
                {% endif %}
            </div>
            
            <div class="form-field">
                <div class="password-header">
                    <label for="password">Password</label>
                    <a href="/account/reset-request" class="reset-link">Reset password</a>
                </div>
                <input type="password" id="password" name="password" placeholder="••••••••" class="form-input" required>
                {% if errors.password == true %}
                <div class="error-message">{{ errors.password_text }}</div>
                {% endif %}
            </div>
            
            <button type="submit" class="submit-button">
                Sign in with password
            </button>
            
            <button type="button" class="otp-button" onclick="window.location.href='/account/otp-request'">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" class="otp-icon">
                    <path d="M3 5C3 3.89543 3.89543 3 5 3H15C16.1046 3 17 3.89543 17 5V15C17 16.1046 16.1046 17 15 17H5C3.89543 17 3 16.1046 3 15V5Z" stroke="currentColor" stroke-width="2"/>
                    <path d="M7 10H13" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                Send me a one-time password
            </button>
        </form>
        
        <div class="signup-link">
            Don't have an account? <a href="/account/create">Sign up</a>
        </div>
    </div>
</div>


{% endblock %}