{% extends "/layouts/main.twig" %}

{% block page %}

<div class="login-container">
    <div class="login-card">
        <div class="login-logo">
            <img src="/images/homehq_logo.svg" alt="HomeHQ" class="logo-image" style="height: 64px; width: auto;">
        </div>
        
        <h1 class="login-title">Reset Password</h1>
        <p class="login-subtitle">Enter your email to receive a password reset link</p>
        
        <form method="post" name="account_reset" action="/account/reset-request" class="login-form">
            <input type="hidden" name="account_reset" value="true">
            
            <div class="form-field">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="" placeholder="{{placeholders.email}}" class="form-input" required>
                {% if errors.email == true %}<div class="error-message">{{ errors.email_text }}</div>{% endif %}
            </div>

            <button type="submit" class="submit-button">Request Reset</button>
        </form>
        
        <div class="signup-link">
            <a href="/account/login">‚Üê Back to Sign In</a>
        </div>
    </div>
</div>

{% endblock %}