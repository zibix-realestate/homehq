{% extends "/layouts/main.twig" %}

{% block page %}

<div class="login-container">
    <div class="login-card">
        <div class="login-logo">
            <img src="/images/homehq_logo.svg" alt="HomeHQ" class="logo-image" style="height: 64px; width: auto;">
        </div>
        
        <h1 class="login-title">Reset Password</h1>
        <p class="login-subtitle">Enter your new password</p>
        
        {% if errors.rcode == true %}
            <div class="error-message">{{ errors.rcode_text }}</div>
        {% endif %}
        
        <form method="post" name="account_reset" action="/account/reset" class="login-form">
            <input type="hidden" name="account_reset" value="true">

            <div class="form-field">
                <label for="password">New Password</label>
                <input type="password" id="password" name="password" value="" placeholder="{{placeholders.password}}" class="form-input" required>
                {% if errors.password == true %}<div class="error-message">{{ errors.password_text }}</div>{% endif %}
            </div>

            <button type="submit" class="submit-button">Reset Password</button>
        </form>
        
        <div class="signup-link">
            <a href="/account/login">‚Üê Back to Sign In</a>
        </div>
    </div>
</div>

{% endblock %}